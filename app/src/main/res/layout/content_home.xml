<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_marginTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/machines"
    tools:context=".HomeActivity"
    tools:showIn="@layout/app_bar_home">
<android.support.v7.widget.CardView
    android:id="@+id/cardview"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    app:cardCornerRadius="15dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true"
    >

        <ViewFlipper
            android:id="@+id/viewflipper"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/input_design"
            android:padding="0dp">

        </ViewFlipper>

</android.support.v7.widget.CardView>

      <TextView
          android:id="@+id/texteventand"
          android:fontFamily="sans-serif"
          android:layout_width="wrap_content"
          android:layout_height="50dp"
          android:text="EVENT SCHEDULE"
          android:layout_below="@+id/cardview"
          android:layout_marginTop="20dp"
          android:textSize="25dp"
          android:textColor="#FFF"
          android:layout_centerHorizontal="true"
          android:textStyle="bold"
          android:background="@drawable/input_design"
          android:padding="5dp"
          />

    <android.support.v7.widget.CardView
        android:id="@+id/sportsevent"
        android:layout_width="300dp"
        android:layout_height="140dp"
        app:cardCornerRadius="15dp"
        android:elevation="5dp"
        app:cardUseCompatPadding="true"
        android:layout_below="@+id/texteventand"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="90dp"
            android:text="Sports Event"
            android:textStyle="italic"
            android:fontFamily="sans-serif"
            android:textColor="#800000"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/txtsportsevent"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="90dp"
            android:text="Know More"
            android:textStyle="italic"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif"
            android:textColor="#800000"
            android:padding="5dp"
            android:background="@drawable/input_design"
            android:textSize="18sp"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
    android:layout_width="120dp"
    android:layout_below="@+id/texteventand"
    android:layout_height="100dp"
    android:elevation="10dp"
        android:layout_alignParentRight="true"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="40dp"
       android:layout_marginRight="215dp"
    >

        <ImageView
            android:layout_width="120dp"
            android:layout_height="85dp"
            android:background="@drawable/input_design"
            android:src="@drawable/sportsevent" />

</android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/textforgape1"
        android:fontFamily="sans-serif"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/sportsevent"
        android:textSize="1dp"
        android:textStyle="bold"
        />



    <android.support.v7.widget.CardView
        android:id="@+id/technicalevent"
        android:layout_width="300dp"
        android:layout_height="140dp"
        app:cardCornerRadius="15dp"
        android:elevation="5dp"
        app:cardUseCompatPadding="true"
        android:layout_below="@+id/textforgape1"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:text="Technical Event"
            android:textStyle="italic"
            android:fontFamily="sans-serif"
            android:textColor="#800000"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:text="Know More"
            android:textStyle="italic"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif"
            android:textColor="#800000"
            android:padding="5dp"
            android:background="@drawable/input_design"
            android:textSize="18sp"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="120dp"
        android:layout_below="@+id/textforgape1"
        android:layout_height="100dp"
        android:elevation="10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="220dp"
        >
        <ImageView
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:background="@drawable/input_design"
            android:src="@drawable/techevent"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textforgape2"
        android:fontFamily="sans-serif"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/technicalevent"
        android:textSize="1dp"
        android:textStyle="bold"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/clureralevent"
        android:layout_width="300dp"
        android:layout_height="140dp"
        app:cardCornerRadius="15dp"
        android:elevation="5dp"
        app:cardUseCompatPadding="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textforgape2"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="90dp"
            android:text="Cultural Events"
            android:textStyle="italic"
            android:fontFamily="sans-serif"
            android:textColor="#800000"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="90dp"
            android:text="Know More"
            android:textStyle="italic"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif"
            android:textColor="#800000"
            android:padding="5dp"
            android:background="@drawable/input_design"
            android:textSize="18sp"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="120dp"
        android:layout_below="@+id/textforgape2"
        android:layout_height="100dp"
        android:elevation="10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="215dp"
        >
        <ImageView
            android:layout_width="110dp"
            android:layout_height="85dp"
            android:background="@drawable/input_design"
            android:src="@drawable/cluteventdance"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textforgape3"
        android:fontFamily="sans-serif"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/clureralevent"
        android:textSize="1dp"
        android:textStyle="bold"
        />



    <android.support.v7.widget.CardView
        android:id="@+id/Workshopevent"
        android:layout_width="300dp"
        android:layout_height="140dp"
        app:cardCornerRadius="15dp"
        android:elevation="5dp"
        app:cardUseCompatPadding="true"
        android:layout_below="@+id/textforgape3"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:text="Work Shop"
            android:textStyle="italic"
            android:fontFamily="sans-serif"
            android:textColor="#800000"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:text="Know More"
            android:textStyle="italic"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif"
            android:textColor="#800000"
            android:padding="5dp"
            android:background="@drawable/input_design"
            android:textSize="18sp"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="120dp"
        android:layout_below="@+id/textforgape3"
        android:layout_height="100dp"
        android:elevation="10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="220dp"
        >
        <ImageView
            android:layout_width="120dp"
            android:layout_height="85dp"
            android:background="@drawable/input_design"
            android:src="@drawable/workshop"/>

    </android.support.v7.widget.CardView>

    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bottmnav"
        android:layout_below="@id/Workshopevent"
        android:layout_alignParentBottom="true"
        app:itemIconTint="#FFFFFF"
        app:itemTextColor="#FFFFFF"
        android:background="@color/colorPrimaryDark"
        app:menu="@menu/bottom_navigation_item">

    </android.support.design.widget.BottomNavigationView>

   </RelativeLayout>

</ScrollView>